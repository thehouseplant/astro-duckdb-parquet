---
import Layout from '../layouts/Layout.astro';
import PetDataTable from '../components/PetDataTable.jsx';
---

<Layout title="Pet Licenses - ParquetView">
  <main class="container mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Seattle Pet License Dataset</h1>
      <p class="text-muted-foreground max-w-2xl mx-auto">
        Explore Seattle's pet license data with advanced filtering, sorting, and search capabilities.
        Data is loaded directly from a Parquet file using DuckDB WebAssembly.
      </p>
    </div>

    <PetDataTable client:load />
  </main>
</Layout>
