---
import Layout from '../layouts/Layout.astro';
import UploadForm from '../components/UploadForm.jsx';
---

<Layout title="Upload - ParquetView">
  <main class="container mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Load Parquet Data</h1>
      <p class="text-muted-foreground max-w-2xl mx-auto">
        Upload your parquet files, load from URL, or explore our sample datasets with interactive tables and charts.
      </p>
    </div>

    <UploadForm client:load />
  </main>
</Layout>
