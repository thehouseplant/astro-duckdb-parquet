---
import ThemeToggle from './ThemeToggle.jsx';
import MobileMenu from './MobileMenu.jsx';
---

<nav class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto px-4">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.79 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.79 4 8 4s8-1.79 8-4M4 7c0-2.21 3.79-4 8-4s8 1.79 8 4"></path>
        </svg>
        <span class="font-bold text-xl">ParquetView</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="/" class="text-sm font-medium transition-colors hover:text-primary">Home</a>
        <a href="/upload" class="text-sm font-medium transition-colors hover:text-primary">Upload</a>
        <a href="/charts" class="text-sm font-medium transition-colors hover:text-primary">Charts</a>
        <ThemeToggle client:load />
      </div>

      <!-- Mobile Navigation -->
      <div class="flex md:hidden items-center space-x-2">
        <ThemeToggle client:load />
        <MobileMenu client:load />
      </div>
    </div>
  </div>
</nav>
